<h2 style="color:plum;">Product List</h2>

<% if(products.length > 0){ %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: aliceblue;"> <th>Title</th> <th>Price</th> <th>Icon</th> </tr>
            <% for (const product of products) {%>
            <tr>
                <td><%=product.title%></td>
                <td> $ <%=product.price%></td>
                <td><%=product.icon%></td>
            </tr>
            <%};%>
        </table>
    </div>
<% } else{ %>
    <h3 class="alert alert-danger">Empty product list</h1>
<% } %>

<a href="/"> <button class="btn btn-danger"> Update product </button> </a>